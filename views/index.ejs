<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task object</title>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h1><u>Niyo Task Management data stream</u></h1>
    <h4>Task created</h4>
    <div id="Tcreate"></div>
    <h4>Task updated</h4>
    <div id="Tupdate"></div>
    <script>
      const socket = io("ws://localhost:3000/");
      console.log(socket);
      socket.on("createTask", (e) => {
        document.getElementById("Tcreate").innerHTML += JSON.stringify(e);
      });
      socket.on("updateTask", (e) => {
        document.getElementById("Tupdate").innerHTML += JSON.stringify(e);
      });
    </script>
  </body>
</html>
